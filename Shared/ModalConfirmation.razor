<div class="simple-form" style="max-width:500px">
    <div class="form-group">
        @Text1
        <br />
        <br />
        @Text2
        <br />
        <br />
        @Text3
    </div>

    <button @onclick="Acept" class="btn btn-outline-success">@AceptOption</button>   
</div>
@code {
    [CascadingParameter] IModalService Modal { get; set; }
    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }
    [Parameter] public string Text1 { get; set; }
    [Parameter] public string Text2 { get; set; }
    [Parameter] public string Text3 { get; set; }
    [Parameter] public string AceptOption { get; set; }

    async Task Acept()
    {
        await ModalInstance.CloseAsync(ModalResult.Ok($"{AceptOption}"));
    }
}
