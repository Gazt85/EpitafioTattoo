@page "/editvideo{id:guid}"
@layout MainLayout

<EditForm Model="Model" OnValidSubmit="HandleSubmit" class="max-w-lg">
    <DataAnnotationsValidator />
    <div class="col-lg-12 control-section">
        <div class="content-wrapper">
            <div class="row col-12 mb-4">
                <div class="col-lg-12">
                    <div class="content wrapper">
                        <SfTextBox Placeholder="Link del video" FloatLabelType="@FloatLabelType.Auto" @bind-Value="Model.Link"></SfTextBox>
                    </div>
                </div>
            </div>
            <div class="row col-12 mb-4">
                <div class="col-lg-12">
                    <div class="content wrapper">
                        <SfTextBox Placeholder="Título del video" FloatLabelType="@FloatLabelType.Auto" @bind-Value="Model.Title"></SfTextBox>
                    </div>
                </div>
            </div>
            <div class="row col-12 mb-4">
                <div class="col-lg-12">
                    <div class="content wrapper">
                        <SfTextBox Placeholder="Descripción del video" FloatLabelType="@FloatLabelType.Auto" @bind-Value="Model.Description" Multiline="true"></SfTextBox>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Editar</button>
        <button type="reset" class="btn btn-danger">Cancelar</button>
    </div>
    <ValidationSummary />
</EditForm>