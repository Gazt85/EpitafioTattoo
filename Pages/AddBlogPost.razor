@page "/addblogpost"
@layout MainLayout

<EditForm Model="Model" OnValidSubmit="HandleSubmit" class="max-w-lg">
    <DataAnnotationsValidator />
    <div class="col-lg-12 control-section">
        <div class="content-wrapper">
            <div class="row col-12 mb-4">
                <div class="col-lg-12">
                    <div class="content wrapper">
                        <SfTextBox Placeholder="Agrega un título para el post" FloatLabelType="@FloatLabelType.Auto" @bind-Value="Model.Title" Multiline="true"></SfTextBox>
                    </div>
                </div>
            </div>
            <div class="row col-12 mb-4">
                <div class="col-lg-12">
                    <div class="content wrapper">
                        <SfTextBox Placeholder="Agrega una descripción para el post" FloatLabelType="@FloatLabelType.Auto" @bind-Value="Model.Description" Multiline="true"></SfTextBox>
                    </div>
                </div>
            </div>
            <div class="row col-12 mb-4">
                <div class="col-lg-12">
                    <div class="content wrapper">
                        <SfTextBox Placeholder="Agrega un resumen para mostrar en la lista de posts" FloatLabelType="@FloatLabelType.Auto" @bind-Value="Model.Summary" Multiline="true"></SfTextBox>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Crear</button>
        <button type="reset" class="btn btn-danger">Cancelar</button>
    </div>

    <ValidationSummary />
</EditForm>
