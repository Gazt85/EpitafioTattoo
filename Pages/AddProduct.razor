@page "/addproduct/{name}"
@layout MainLayout

<h3>Agregar Producto</h3>
<hr />

<EditForm Model="Model" OnValidSubmit="HandleSubmit" class="max-w-lg">
    <DataAnnotationsValidator />
    <div class="col-lg-12 control-section">
        <div class="content-wrapper">
            <div class="row col-12 mb-4">
                <div class="col-lg-12">
                    <div class="content wrapper">
                        <SfTextBox Placeholder="Nombre del Producto" FloatLabelType="@FloatLabelType.Auto" @bind-Value="Model.Name"></SfTextBox>
                    </div>
                </div>
            </div>
            <div class="row col-12 mb-4">
                <div class="col-lg-12">
                    <div class="content wrapper">
                        <SfTextBox Placeholder="Descripción del producto" FloatLabelType="@FloatLabelType.Auto" @bind-Value="Model.Description" Multiline="true"></SfTextBox>
                    </div>
                </div>
            </div>
            <div class="row col-12 mb-4">
                <div class="col-lg-12">
                    <div class="content wrapper">
                        <SfNumericTextBox Placeholder="Precio del producto" FloatLabelType="@FloatLabelType.Auto" @bind-Value="Model.Price"></SfNumericTextBox>
                    </div>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-xs-12 col-sm-12 col-lg-12 col-md-12">
                    <p><h4>Foto del producto</h4></p>
                    <div ID="DropArea">
                        Arrastra la foto aqui
                    </div>
                    <SfUploader ID="UploadFiles" AutoUpload=false DropArea="#DropArea" DirectoryUpload="false">
                        <UploaderEvents ValueChange="Upload_OnChange"></UploaderEvents>
                    </SfUploader>
                </div>
            </div>
        </div>
    </div>
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Aceptar</button>
        <button type="reset" class="btn btn-danger">Cancelar</button>
    </div>

    <ValidationSummary />
</EditForm>
